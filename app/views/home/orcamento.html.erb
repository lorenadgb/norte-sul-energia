<header class="masthead">

  <div class="container">
    <%= render 'layouts/shared/links' %>

    <br><br><br><br>
  </div>

</header>

<section class="services">
  <div class="container">
    <div class="box first">

      <div class="row">
        <div class="col-md-12">
          <div class="nav-left-text">
            <div class="rdg-expertise-description rdg-strategy-bg rdg-animated-delay-0 text-right" style="float: left;"></div>

            <p style="font-size: 20px; color: black">O MELHOR INVESTIMENTO</p>
            <p style="color: #2d5c82">SOLICITE UM ORÇAMENTO</p>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">

          <p style="font-size: 16px">
            Para receber um orçamento sem compromisso da NORTE SUL basta preencher os campos do formulário
            abaixo. A nossa equipe entrará em contato o mais breve possível.
          </p>

          <br>

          <%= simple_form_for @contact do |f| %>
            <div class="form-group">
              <div class="col-md-12">
                <%= f.input :name, placeholder: 'NOME', required: true, label: false, input_html: { class: 'form-control'} %>
              </diV>

              <div class="col-md-12">
                <%= f.input :email, placeholder: 'E-MAIL', required: true, label: false, input_html: { class: 'form-control'} %>
              </diV>

              <div class="col-md-12">
                <%= f.input :telephone, placeholder: 'TELEFONE', required: true, label: false, input_html: { class: 'form-control', style: 'margin-bottom: 40px'} %>
              </div>
            </div>

            <div class="row">
              <p style="font-size: 26px; text-align: center;">
                LOCAL DA INSTALAÇÃO
              </p>
            </div>

            <div class="col-md-6">
              <%= f.input :state, prompt: 'ESTADO', collection: State.all, required: true, label: false, input_html: { class: 'form-control', style: 'margin-bottom: 40px'} %>
            </div>

            <div class="col-md-6">
              <%= f.input :city, prompt: 'CIDADE', collection: City.all, required: true, label: false, input_html: { class: 'form-control',  style: 'margin-bottom: 40px'} %>
            </div>

            <div class="row">
              <p style="font-size: 26px; text-align: center;">ONDE SERÁ INSTALADO?</p>
            </div>

            <%= f.collection_radio_buttons(:local, [['residencial', '/icons/residencial_azul'], ['comercial', '/icons/comercial_azul'], ['outro', '/icons/outro_azul']], :first, :last, item_wrapper_tag: "div class='col-md-3 col-md-offset-1'", class: 'threads-opts') do |b| %>
              <%= b.label { b.radio_button(class: 'threads-opts') + image_tag(b.text+'.png') } %>
            <% end %>

            <div class="row">
                <p style="font-size: 26px; text-align: center; margin-top: 140px">CONSUMO MÉDIO MENSAL (KWH)</p>
              </div>

              <div class="valor-slider">
                <div class="row">
                  <div class="col-md-1">
                    <%= image_tag 'menor.png' %>
                  </div>
                  <div class="col-md-10">
                    <div id="slider"></div>
                  </div>
                  <div class="col-md-1">
                    <%= image_tag 'maior.png' %>
                  </div>
                </div>
              </div>

              <center> <%= f.button :submit, 'ENVIAR', :class=> "btn btn-primary", style: 'width: 250px' %> </center>

          <% end %>

        </div><!--/.box-->
      </div>
    </div>
  </div><!--/.container-->
</section>

<script src="https://code.jquery.com/ui/1.10.4/jquery-ui.min.js"></script>

<script>
    $(document).ready(function(){

        initPreferences = function () {
            //Added, set initial value.
            $("#amount").val(7500);
            $("#duration").val(7500);
            $("#amount-label").text(7500);
            $("#duration-label").text(7500);

            update();
        }();

        $("input[name='contact[local]']").click(function(){
            switch($(this).val()) {
                case 'residencial':
                    $('#contact_local_residencial').next('img').attr("src", "/icons/residencial_amarelo.png");
                    $('#contact_local_comercial').next('img').attr("src", "/icons/comercial_azul.png");
                    $('#contact_local_outro').next('img').attr("src", "/icons/outro_azul.png");

                    break;
                case 'comercial':
                    $('#contact_local_residencial').next('img').attr("src", "/icons/residencial_azul.png");
                    $('#contact_local_comercial').next('img').attr("src", "/icons/comercial_amarelo.png");
                    $('#contact_local_outro').next('img').attr("src", "/icons/outro_azul.png");

                    break;

                case 'outro':
                    $('#contact_local_residencial').next('img').attr("src", "/icons/residencial_azul.png");
                    $('#contact_local_comercial').next('img').attr("src", "/icons/comercial_azul.png");
                    $('#contact_local_outro').next('img').attr("src", "/icons/outro_amarelo.png");

                    break;
            }
        });


        $("#contact_state").change(function() {
            getCitiesByState("id="+$("#contact_state").val());
        });

        $("#contact_city").change(function() {
            getStateByCity("id="+$("#contact_city").val());
        });

        function getCitiesByState(id) {
            $.getJSON("/cities_by_state", id, function (j) {
                var options = '<option value="">CIDADE</option>';
                $.each(j.cty, function (i, item) {
                    options += '<option value="' + item.id + '">' + item.n + '</option>';
                });
                $("#contact_city").html(options);
            });
        }

        function getStateByCity(id) {
            $.getJSON("/state_by_city", id, function (j) {
                $("#contact_state").val(j['state']['id']);
            });
        }

        $("#slider").slider({
            animate: true,
            value:7500,
            min: 100,
            max: 15000,
            step: 10,
            slide: function(event, ui) {
                update(1,ui.value);
            }
        });

        //changed. now with parameter
        function update(slider,val) {
            //changed. Now, directly take value from ui.value. if not set (initial, will use current value.)
            var $amount = slider == 1?val:$("#amount").val();
            var $duration = slider == 2?val:$("#duration").val();

            /* commented
            $amount = $( "#slider" ).slider( "value" );
             */

            $total = "$" + ($amount * $duration);
            $( "#amount" ).val($amount);
            $( "#amount-label" ).text($amount);
            $( "#duration" ).val($duration);
            $( "#duration-label" ).text($duration);
            $( "#total" ).val($total);
            $( "#total-label" ).text($total);

            $('#slider a').html('<label><span class="glyphicon glyphicon-chevron-left"></span> '+$amount+' <span class="glyphicon glyphicon-chevron-right"></span></label>');
        }
    });
</script>
