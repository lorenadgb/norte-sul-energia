<%= render 'layouts/shared/carousel', slide: 2 %>

<%= hidden_field_tag :pdf_name, @pdf_name %>

<section class="services">
  <div class="container">
    <div class="box carousel">

      <div class="row">
        <div class="col-md-12">

          <%= link_to 'Download', download_pdf_path(pdf_name: @pdf_name), id: 'download_pdf', class: 'download_pdf' %>

          <div class="row">
            <div class="nav-left-text" style="text-align: center">
              <p>CALCULADORA SOLAR</p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <figure class="card card-product">
            <figcaption class="info-wrap">
              <h4 class="title card-title"><%= image_tag '/icons/resultado_investimento.png', style: 'height: 50px; border: 0; padding: 0' %>INVESTIMENTO</h4>
            </figcaption>
            <div class="bottom-wrap">
              <p>De R$ 1.000,00 a R$ 5.000,00</p>
              <hr style="height:2px;border:none;color:gray;background-color:gray;padding-left: 50px;width: 50px;">
              <p>Economia mensal:</p>
              <p>De R$ 1.000,00</p>
              <p>Economia anual:</p>
              <p>De R$ 1.000,00</p>
              <p>Economia total em 30 anos:</p>
              <p>De R$ 1.000,00</p>
            </div> <!-- bottom-wrap.// -->
          </figure>
        </div> <!-- col // -->

        <div class="col-md-4">
          <figure class="card card-product">
            <figcaption class="info-wrap">
              <h4 class="title card-title"><%= image_tag '/icons/resultado_ambiente.png', style: 'height: 50px; border: 0; padding: 0' %>AMBIENTE</h4>
            </figcaption>
            <div class="bottom-wrap">
              <p>Equivalente a 10.000 KM de </p>
              <p>carro elétrico</p>
              <hr style="height:2px;border:none;color:gray;background-color:gray;padding-left: 50px;width: 50px;">
              <p>Redução de CO2 na atmosfera</p>
              <p>Equivalente a centenas  de árvores plantadas</p>
              <p>Equivalente a milhares  de KM rodados de um  carro</p>
            </div> <!-- bottom-wrap.// -->
          </figure>
        </div> <!-- col // -->

        <div class="col-md-4">
          <figure class="card card-product">
            <figcaption class="info-wrap">
              <h4 class="title card-title"><%= image_tag '/icons/resultado_sistema.png', style: 'height: 50px; border: 0; padding: 0' %>SISTEMA INDICADO</h4>
            </figcaption>
            <div class="bottom-wrap">
              <p>kWp</p>
              <hr style="height:2px;border:none;color:gray;background-color:gray;padding-left: 50px;width: 50px;">
              <p>Tamanho da Potência:</p>
              <p>kWp</p>
              <p>Número de Módulos:</p>
              <p>10 módulos</p>
              <p>Produção Estimada:</p>
              <p>10.000 kw/h</p>
            </div> <!-- bottom-wrap.// -->
          </figure>
        </div> <!-- col // -->
      </div> <!-- row.// -->

      <div class="col-md-6">
        <%= link_to 'REINCIAR CALCULADORA', new_calculadora_path(anchor: 'calculadora'), class: 'btn btn-primary btn-block pull-right' %>
      </div>

      <div class="col-md-6">
        <%= link_to 'SOLICITE ORÇAMENTO', root_path, class: 'btn btn-primary-outline btn-block pull-left' %>
      </div>

      <br><br><br>

    </div>
  </div>
</section>

